<prism:PrismApplication
    x:Class="PromptNote.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PromptNote.Views.Converters"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:sys="clr-namespace:System">

    <Application.Resources>
        <sys:Double x:Key="BasicFontSize">15</sys:Double>
        <SolidColorBrush x:Key="BgBrush" Color="#333333" />

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource BasicFontSize}" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource BasicFontSize}" />
        </Style>

        <converters:ListToStringConverter x:Key="ListToStringConverter" />
    </Application.Resources>

</prism:PrismApplication>